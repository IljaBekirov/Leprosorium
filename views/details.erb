<h4>Post details:</h4>
<p>
  <br />
  <%= @row['content'] %>
  <br />
  <br />
  Addet at <%= @row['created_date'] %>
</p>
<h4>Comments:</h4>
<p>
  <% @comments.each do |comment| %>
    <hr />
    <%= comment['content'] %>
    <br />
    <br />
    Addet at <%= comment['created_date'] %>
    <br />
    <hr />
  <% end %>
</p>
<p>
  <form action="/details/<%= @row['id'] %>" method="POST" role="form">
    <textarea name="content" placeholder="Type comment text here" class="form-control" rows="6"></textarea>
    <br />
    <button type="submit" class="btn btn-primary">Add comment</button>
  </form>
</p>