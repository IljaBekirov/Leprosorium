<h1>Список клиентов</h1>

<table class="table table-hover table-bordered">

  <thead class="table-primary">
    <tr>
      <th>№</th>
      <th>Имя</th>
      <th>Телефон</th>
      <th>Дата</th>
      <th>Парикмахер</th>
      <th>Цвет</th>
    </tr>
  </thead>
  <% @results.each do |row| %>
  <tbody>
    <tr>
      <td><%= row['id'] %></td>
      <td><%= row['Name'] %></td>
      <td><%= row['Phone'] %></td>
      <td><%= row['Datestamp'] %></td>
      <td><%= row['Barber'] %></td>
      <td style="background-color: <%= row['Color'] %>"><%= row['Color'] %></td>
    </tr>
  </tbody>
  <% end %>
</table>